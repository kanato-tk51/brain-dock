{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://brain-dock/schemas/key_facts.schema.json",
  "title": "Key Facts",
  "description": "Structured facts extracted from notes/tasks for AI retrieval.",
  "type": "array",
  "items": {
    "type": "object",
    "additionalProperties": false,
    "required": [
      "subject",
      "predicate",
      "object_text",
      "object_type",
      "confidence"
    ],
    "properties": {
      "subject": {
        "type": "string",
        "minLength": 1,
        "maxLength": 120
      },
      "predicate": {
        "type": "string",
        "minLength": 1,
        "maxLength": 80
      },
      "object_text": {
        "type": "string",
        "minLength": 1,
        "maxLength": 1000
      },
      "object_type": {
        "type": "string",
        "enum": [
          "text",
          "number",
          "date",
          "bool",
          "json"
        ]
      },
      "object_json": {
        "type": [
          "string",
          "null"
        ],
        "maxLength": 1000
      },
      "evidence_excerpt": {
        "type": [
          "string",
          "null"
        ],
        "maxLength": 500
      },
      "occurred_at": {
        "type": [
          "string",
          "null"
        ],
        "maxLength": 40
      },
      "confidence": {
        "type": "number",
        "minimum": 0,
        "maximum": 1
      }
    }
  }
}
