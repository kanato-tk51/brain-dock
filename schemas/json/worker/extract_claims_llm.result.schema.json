{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "worker",
    "contract_version",
    "status",
    "claims_inserted",
    "evidence_inserted",
    "entities_upserted",
    "links_inserted",
    "attempt_count",
    "dry_run"
  ],
  "properties": {
    "worker": { "type": "string" },
    "contract_version": { "type": "string" },
    "job_id": { "type": ["string", "null"] },
    "job_item_id": { "type": ["string", "null"] },
    "entry_id": { "type": ["string", "null"] },
    "document_id": { "type": ["string", "null"] },
    "status": {
      "type": "string",
      "enum": ["succeeded", "queued", "blocked", "failed"]
    },
    "claims_inserted": { "type": "integer", "minimum": 0 },
    "evidence_inserted": { "type": "integer", "minimum": 0 },
    "entities_upserted": { "type": "integer", "minimum": 0 },
    "links_inserted": { "type": "integer", "minimum": 0 },
    "attempt_count": { "type": "integer", "minimum": 1 },
    "next_retry_at": { "type": ["string", "null"] },
    "error": { "type": ["string", "null"] },
    "dry_run": { "type": "boolean" }
  }
}
